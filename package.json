{
    "name": "budget-tracking-app-backend",
    "version": "0.0.1",
    "description": "The backend for the budget tracking app",
    "author": "Eugene Kolesnyk <eugeniusz.kolesnyk@gmail.com>",
    "private": true,
    "license": "UNLICENSED",
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
        "prepare": "is-ci || husky install",
        "build": "nest build --webpack",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "prisma:init": "prisma migrate dev --name init",
        "prisma:deploy": "prisma migrate deploy",
        "prisma:generate": "npx prisma generate",
        "prisma:studio": "prisma studio",
        "prisma:seed": "npx prisma db push --force-reset && npx prisma db seed",
        "docker-up:prod": "docker compose -f docker-compose.prod.yml up -d",
        "docker-down:prod": "docker compose -f docker-compose.prod.yml down",
        "docker-up:dev": "docker compose -f docker-compose.dev.yml up -d",
        "docker-down:dev": "docker compose -f docker-compose.dev.yml down",
        "start": "cross-env NODE_ENV=development node dist/main",
        "start:dev": "cross-env NODE_ENV=development nest start --watch --exec 'node -r tsconfig-paths/register -r ts-node/register ./src/main.ts'",
        "start:prod": "cross-env NODE_ENV=production node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
        "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest --config jest.config.ts",
        "test:watch": "jest --watch --config jest.config.ts",
        "test:cov": "jest --coverage --config jest.config.ts",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --config jest.config.ts",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/common": "^9.0.0",
        "@nestjs/config": "^3.0.1",
        "@nestjs/core": "^9.0.0",
        "@nestjs/jwt": "^10.1.1",
        "@nestjs/passport": "^10.0.2",
        "@nestjs/platform-express": "^9.0.0",
        "@nestjs/schedule": "^3.0.4",
        "@nestjs/swagger": "^7.1.10",
        "cookie-parser": "^1.4.6",
        "cross-env": "^7.0.3",
        "date-fns": "^2.30.0",
        "husky": "^8.0.3",
        "is-ci": "^3.0.1",
        "nestjs-zod": "^3.0.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "postgres": "^3.3.5",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.2.0",
        "uuid": "^9.0.1",
        "zod": "^3.22.2"
    },
    "devDependencies": {
        "@nestjs/cli": "^9.0.0",
        "@nestjs/schematics": "^9.0.0",
        "@nestjs/testing": "^9.0.0",
        "@prisma/client": "^5.4.1",
        "@types/cookie-parser": "^1.4.5",
        "@types/express": "^4.17.13",
        "@types/jest": "29.5.1",
        "@types/node": "18.16.12",
        "@types/passport-jwt": "^3.0.10",
        "@types/passport-local": "^1.0.36",
        "@types/supertest": "^2.0.11",
        "@types/uuid": "^9.0.6",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.51.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "29.5.0",
        "prettier": "^2.3.2",
        "prisma": "^5.4.1",
        "prisma-erd-generator-markdown": "^1.3.1",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "29.1.0",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "4.2.0",
        "typescript": "^5.0.0"
    },
    "prisma": {
        "schema": "./src/shared/prisma/schema.prisma",
        "seed": "ts-node -r tsconfig-paths/register src/shared/prisma/seeds/main.ts"
    }
}
